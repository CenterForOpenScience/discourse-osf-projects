{{#if list.params.view_only}}
    <div class="osf-alert">This project is being viewed through a private, view-only link. Anyone with the link can view this project. Keep the link safe.</div>
{{/if}}

<div class="list-controls">
  <div class="container">
  <h1 class="osf-project-show-heading">
    {{#if list.topic_list.parent_names.[1]}}
        {{#link-to 'projects.show' list.topic_list.parent_guids.[1]  (query-params view_only=this.view_only)}}{{list.topic_list.parent_names.[1]}}{{/link-to}}
        <i class="fa fa-angle-right"></i>
    {{/if}}
    {{#link-to 'projects.show' list.topic_list.parent_guids.[0]  (query-params view_only=this.view_only)}}{{list.topic_list.parent_names.[0]}}{{/link-to}}
  </h1>
  </div>
</div>

<div class="list-controls">
  <div class="container">
      {{bread-crumbs categories=categories
                     category=model.category
                     noSubcategories=noSubcategories
                     hideSubcategories=showingSubcategoryList}}

      {{navigation-bar navItems=navItems filterMode=model.navMode}}

      {{#if canCreateTopic}}
        <button id="create-topic" class='btn btn-default' {{action "createTopic"}}><i class='fa fa-plus'></i>{{i18n 'topic.create'}}</button>
      {{/if}}
  </div>
</div>

<div class='container list-container'>
  {{outlet "list-container"}}
</div>
