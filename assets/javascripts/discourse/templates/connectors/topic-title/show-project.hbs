{{#if this.model.parent_guids.[0]}}
    {{#unless this.model.project_is_public}}
        <i class="fa fa-lock"></i>
    {{/unless}}
    {{#each this.model.parent_guids as |_pg index|}}
        {{#if index}}
            <i class="fa fa-angle-right"></i>
        {{/if}}
        <span class='parent-project'>
            {{#if this.view_only}}
                {{#link-to 'projects.show' (object-from-end this.model.parent_guids index) (query-params view_only=this.view_only) }}
                    {{object-from-end this.model.parent_names index}}
                {{/link-to}}
            {{else}}
                {{#link-to 'projects.show' (object-from-end this.model.parent_guids index) }}
                    {{object-from-end this.model.parent_names index}}
                {{/link-to}}
            {{/if}}
        </span>
    {{/each}}
{{/if}}
